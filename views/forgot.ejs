<%- include('./partials/header') %>

<div class="row mt-5">
  <div class="col-md-4 offset-md-4">
    <form action="/forgot" method="post">
      <legend>Forgot Password</legend>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" placeholder="Enter your email id" autofocus>
      </div>
      <div class="form-group"><input class="btn btn-primary" type="submit" value="Reset Password"></div>
    </form>
  </div>
</div>

