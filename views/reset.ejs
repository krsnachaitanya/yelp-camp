<%- include('./partials/header') %>

<div class="row mt-5">
  <div class="col-md-4 offset-md-4">
    <form action="/reset/<%= token %>" method="post">
      <legend>Reset Password</legend>
      <div class="form-group">
        <label for="password">New Password</label>
        <input class="form-control" type="password" name="password" placeholder="New Password" autofocus>
      </div>
      <div class="form-group">
        <label for="confirm">Confirm Password</label>
        <input class="form-control" type="password" name="confirm" placeholder="New Password">
      </div>
      <div class="form-group"><input class="btn btn-primary" type="submit" value="Update Password"></div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>