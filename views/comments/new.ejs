<%- include('../partials/header') %>

<div class="container">
  <h1 class="text-center">Add New Comment to <%= campground.name %> </h1>

  <div class="col-md-6 mx-auto">
    <!-- Posts data to campgrounds page -->
    <form action="/campgrounds/<%= campground.slug %>/comments" method="post">
      <div class="form-group mt-4">
        <input class="form-control" type="text" name="comment[text]" placeholder="Add a comment" required>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground.slug %> ">Go Back!</a>
  </div>
</div>

<%- include('../partials/footer') %>