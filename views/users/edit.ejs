<%- include('../partials/header') %>
<div class="container mt-5">
  <h1 class="text-center">Edit: <%= user.username %> </h1>

  <div class="col-md-6 mx-auto">
    <!-- Posts data to user page -->
    <form action="/user/<%= user._id %>?_method=PUT" method="post">
      <div class="form-group mt-4">
        <label for="username">Username</label>
        <input class="form-control" type="text" name="user[username]" placeholder="Username"
          value="<%= user.username %>" required>
      </div>
      <div class="form-group">
        <label for="avatar">Avatar URL</label>
        <input class="form-control" type="text" name="user[avatar]" placeholder="Avatar URL" value="<%= user.avatar %>">
      </div>
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input class="form-control" type="text" name="user[firstName]" placeholder="First Name"
          value="<%= user.firstName %>">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input class="form-control" type="text" name="user[lastName]" placeholder="Last Name"
          value="<%= user.lastName %>">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="user[email]" placeholder="email@address.com"
          value="<%= user.email %>">
      </div>
      <div class="form-group">
        <label for="adminCode">Admin Code</label>
        <input type="text" name="adminCode" placeholder="Admin Code" class="form-control">
      </div>
      <div class="form-group text-center">
        <a class="btn btn-lg btn-danger m-3" href="/user/<%= user._id %>">Cancel</a>
        <button class="btn btn-lg btn-primary m-3" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>